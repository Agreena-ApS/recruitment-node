{
    "name": "recruitment-node",
    "version": "1.0.0",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "build": "tsc",
        "start": "node dist/main.js",
        "debug": "nest start --watch",
        "lint": "eslint",
        "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest --runInBand --verbose",
        "test:coverage": "jest --runInBand --verbose --coverage",
        "precommit": "npm run lint:fix && npm run build && npm run test",
        "migration:generate": "ts-node ./node_modules/typeorm/cli.js -f src/orm.migration.config.ts migration:generate",
        "migration:create": "ts-node ./node_modules/typeorm/cli.js -f src/orm.migration.config.ts  migration:create -n",
        "migration:run": "ts-node ./node_modules/typeorm/cli.js -f src/orm.migration.config.ts migration:run",
        "migration:revert": "ts-node ./node_modules/typeorm/cli.js -f src/orm.migration.config.ts migration:revert"
    },
    "dependencies": {
        "@nestjs/common": "8.0.0",
        "@nestjs/core": "8.0.0",
        "@nestjs/event-emitter": "1.0.0",
        "@nestjs/jwt": "8.0.0",
        "@nestjs/platform-express": "8.0.0",
        "@nestjs/swagger": "5.2.1",
        "@nestjs/typeorm": "8.0.2",
        "bcrypt": "5.0.1",
        "class-transformer": "0.5.1",
        "class-validator": "0.13.2",
        "pg": "8.7.3",
        "reflect-metadata": "0.1.13",
        "rimraf": "3.0.2",
        "rxjs": "7.2.0",
        "swagger-ui-express": "4.3.0",
        "typeorm": "0.2.38"
    },
    "devDependencies": {
        "@faker-js/faker": "6.1.2",
        "@nestjs/cli": "8.0.0",
        "@nestjs/schematics": "8.0.0",
        "@nestjs/testing": "8.0.0",
        "@types/bcrypt": "5.0.0",
        "@types/express": "4.17.13",
        "@types/jest": "27.4.0",
        "@types/node": "16.0.0",
        "@types/supertest": "2.0.11",
        "@typescript-eslint/eslint-plugin": "5.0.0",
        "@typescript-eslint/parser": "5.0.0",
        "eslint": "8.0.1",
        "eslint-config-prettier": "8.3.0",
        "eslint-plugin-prettier": "4.0.0",
        "jest": "27.2.5",
        "prettier": "2.3.2",
        "source-map-support": "0.5.20",
        "supertest": "6.1.3",
        "ts-jest": "27.0.3",
        "ts-loader": "9.2.3",
        "ts-node": "10.7.0",
        "tsconfig-paths": "3.10.1",
        "typescript": "4.3.5"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            ".+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
