  "compilerOptions": {
    "target": "es6",              
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "module": "commonjs",                        
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,                     
    "forceConsistentCasingInFileNames": true,            
